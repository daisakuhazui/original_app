<h2>Sign up</h2>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="form-group">
          <div>
            <label><%= f.label :alias_name %></label>
            <%= f.text_field :alias_name, autofocus: true, class: "form-control", placeholder: "Enter ID name" %>
          </div>

          <div class="field">
            <label><%= f.label :name %></label>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter name" %>
          </div>

          <div class="field">
            <label><%= f.label :email %></label>
            <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>

          <div class="field">
            <label><%= f.label :password %></label>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="field">
            <label><%= f.label :password_confirmation %></label>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>

        <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
