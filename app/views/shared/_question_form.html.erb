<div class="col-md-8 offset-md-2">
  <%= form_for(question, as: :question) do |f| %>
    <div class="field">
      <%= f.text_area :content, class: "form-control form-control-lg", placeholder: "Ask Question Now !" %>
      <%= f.hidden_field :user_id %>
    </div>
    <%= f.submit "Ask Question", class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
</div>
